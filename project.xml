<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Windows XP Simulation" package="com.ander.windowsxp"/>
    <meta version="1.0.0"/>
    <meta author="Ander"/>
    <meta description="Simulação do Windows XP usando HTML5"/>

    <!-- Define o arquivo Haxe principal -->
    <app main="Main" file="index.html" path="bin/html5"/>

    <!-- Haxe libraries necessárias -->
    <haxelib name="lime"/>
    <haxelib name="openfl"/>

    <!-- Assets: todos os arquivos HTML/CSS/JS -->
    <assets path="assets" include="**"/>

    <!-- Configuração da janela HTML5 -->
    <window width="1024" height="768" fps="60"/>
</project>