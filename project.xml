<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Windows XP Simulation" package="com.ander.windowsxp"/>
    <meta version="1.0.0"/>
    <meta author="Ander"/>
    <meta description="Simulação do Windows XP usando HTML5 e Android"/>

    <!-- HTML5 target -->
    <app main="Main" path="bin/html5"/>

    <!-- Android target -->
    <app main="Main" path="bin/android" type="android"/>

    <!-- Haxe libraries -->
    <haxelib name="lime"/>
    <haxelib name="openfl"/>

    <!-- Assets: todos os arquivos HTML/CSS/JS/fundos -->
    <assets path="assets" include="**"/>

    <!-- Configuração da janela -->
    <window width="1024" height="768" fps="60"/>
</project>